[core]
	editor = vim

[alias]
	lodag = log --oneline --decorate --all --graph --color
	ldag = log --decorate --all --graph --color
	lod = log --oneline --decorate --color
	co = checkout
	cam = commit --amend
	cAm = commit --amend --reuse-message=HEAD

[pull]
	rebase = true
[fetch]
	prune = true
[rebase]
	instructionFormat = %s [%an] # add the commit author to the end of each line
[mergetool]
	keepBackup = false
[init]
	defaultBranch = main
